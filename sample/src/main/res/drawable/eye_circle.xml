<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blue circle for the iris -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#0000FF"/> <!-- Blue color for the iris -->
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

    <!-- Black circle for the pupil -->
    <item
        android:bottom="30dp"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp">
        <shape android:shape="oval">
            <solid android:color="#000000"/> <!-- Black color for the pupil -->
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>
</layer-list>